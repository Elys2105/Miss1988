<!DOCTYPE html>
<style>
    /* Font */
    body {
        font-family: 'Varela Round', sans-serif;
        background-color: #fff;
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Container căn giữa */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    /* Header tổng thể */
    .main-header {
        background: linear-gradient(to right, #614033, #4C2B08);
        padding: 20px 0;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    /* Logo */
    .header-logo a {
        font-size: 28px;
        font-weight: bold;
        color: white;
        text-decoration: none;
        font-family: 'Segoe UI', sans-serif;
    }

    /* Menu */
    .header-menu a {
        margin-left: 25px;
        color: white;
        text-decoration: none;
        font-weight: 500;
        font-size: 16px;
        transition: color 0.3s;
    }

        .header-menu a:hover {
            color: #ffdd57;
        }

    /* Features */
    .features {
        display: flex;
        justify-content: center;
        gap: 4rem;
        padding: 3rem 2rem;
        background-color: #f9f9f9;
        text-align: center;
    }

    .feature-box {
        width: 250px;
    }

        .feature-box .icon {
            font-size: 2rem;
        }

        .feature-box h4 {
            font-size: 1rem;
            font-weight: bold;
            margin-top: 1rem;
            margin-bottom: 0.5rem;
            letter-spacing: 1px;
        }

        .feature-box .subtext {
            font-size: 0.85rem;
            color: #777;
        }

    /* Section Titles */
    .section-title {
        text-align: center;
        max-width: 1200px;
        margin: 0 auto;
    }

        .section-title h2 {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            margin-bottom: 0.3rem;
        }

        .section-title .subtitle {
            font-size: 0.95rem;
            color: #777;
        }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .header-logo a {
        font-size: 28px;
        font-weight: bold;
        color: #fff; /* Giữ trắng cho nền nâu */
        text-decoration: none;
        font-family: 'Segoe UI', sans-serif;
    }

    .header-menu a {
        margin-left: 25px;
        color: #fff; /* Giữ trắng cho nền nâu */
        text-decoration: none;
        font-weight: 500;
        font-size: 16px;
        transition: color 0.3s;
    }

        .header-menu a:hover {
            color: #ffdd57;
        }

    .dropdown {
        position: relative;
        display: inline-block;
        z-index: 1100;
    }

    .dropdown-toggle {
        background: none;
        border: none;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        color: #fff;
        padding: 8px 12px;
    }

    .dropdown-menu {
        display: none;
        position: absolute;
        background-color: #fff;
        min-width: 180px;
        top: 100%;
        right: 0;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        border-radius: 6px;
        z-index: 9999;
    }

        .dropdown-menu a {
            color: #333 !important;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            font-size: 14px;
            font-weight: 500;
        }

            .dropdown-menu a:hover {
                background-color: #333;
                color: #fff !important;
            }

    .dropdown:hover .dropdown-menu {
        display: block;
    }

    .search-bar {
        max-width: 600px;
        margin: 20px auto 40px;
        text-align: center;
    }

        .search-bar input[type="text"] {
            width: 70%;
            padding: 10px 14px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 6px 0 0 6px;
            outline: none;
        }

        .search-bar button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            background-color: #f98d2a;
            color: #fff;
            border-radius: 0 6px 6px 0;
            cursor: pointer;
            transition: background 0.3s;
        }

            .search-bar button:hover {
                background-color: #e67d19;
            }
    #suggestions div:hover {
        background-color: #f98d2a;
        color: white;
    }

</style>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Miss1988</title>
</head>
<body>
    <header class="main-header">
        <div class="container">
            <div class="header-logo">
                <a href="@Url.Action("Index", "Home")">Miss1988</a>
            </div>
            <nav class="header-menu">
                <a href="@Url.Action("Index", "Home")">Trang chủ</a>
                <a href="@Url.Action("About", "Home")">Giới thiệu</a>
                <a href="@Url.Action("Index", "Menu")">Menu</a>
                <a href="@Url.Action("Index", "Promotion")">Khuyến Mãi</a>
                <a href="@Url.Action("About", "Home")">Tuyển Dụng</a>
                <a href="@Url.Action("Index", "Cart")" style="position: relative;">
                    🛒 Giỏ Hàng
                    <span id="cart-count" style="position:absolute; top:-10px; right:-10px; background:red; color:white; font-size:12px; padding:2px 6px; border-radius:50%;">
                        @((Session["ShoppingCart"] as Miss1988.Models.ViewModel.CartVM)?.Items.Sum(i => i.Quantity) ?? 0)
                    </span>
                </a>

                @if (Session["Username"] != null)
                {
                    <div class="dropdown">
                        <button class="dropdown-toggle">@Session["Username"] <span>&#x25BC;</span></button>
                        <div class="dropdown-menu">
                            <a href="#">Thông tin tài khoản</a>
                            <a href="@Url.Action("Logout", "Account")">Đăng xuất</a>
                        </div>
                    </div>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")">Thành Viên</a>
                }
            </nav>
        </div>
    </header>
    <main class="main-content">
        <div class="search-bar">
            <form action="@Url.Action("Search", "Menu")" method="get" autocomplete="off">
                <input type="text" id="searchInput" name="keyword" placeholder="🔍 Tìm món bạn yêu thích..." />
                <button type="submit">Tìm kiếm</button>
            </form>
            <div id="suggestions" style="position: absolute; background: #fff; width: 70%; margin-left: 15%; box-shadow: 0 2px 5px rgba(0,0,0,0.2); z-index: 999; border-radius: 6px; display: none;"></div>
        </div>
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </main>

    <footer class="main-footer">
        <p>&copy; @DateTime.Now.Year - Miss1988</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const slides = document.querySelectorAll('.slide');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            let currentIndex = 0;
            let interval;

            function showSlide(index) {
                slides.forEach((slide, i) => {
                    slide.classList.toggle('active', i === index);
                });
            }

            function nextSlide() {
                currentIndex = (currentIndex + 1) % slides.length;
                showSlide(currentIndex);
            }

            function prevSlide() {
                currentIndex = (currentIndex - 1 + slides.length) % slides.length;
                showSlide(currentIndex);
            }

            function startAutoSlide() {
                interval = setInterval(nextSlide, 5000);
            }

            function stopAutoSlide() {
                clearInterval(interval);
            }

            prevBtn.addEventListener('click', () => {
                stopAutoSlide();
                prevSlide();
                startAutoSlide();
            });

            nextBtn.addEventListener('click', () => {
                stopAutoSlide();
                nextSlide();
                startAutoSlide();
            });

            showSlide(currentIndex);
            startAutoSlide();
        });
    </script>
    <script>
    $(document).ready(function () {
        $('#searchInput').on('input', function () {
            const keyword = $(this).val().trim();
            if (keyword.length === 0) {
                $('#suggestions').hide().empty();
                return;
            }

            $.ajax({
                url: '@Url.Action("Suggest", "Menu")', // gọi tới action gợi ý
                data: { term: keyword },
                success: function (data) {
                    if (data.length > 0) {
                        let html = '';
                        data.forEach(function (item) {
                            html += `<div class="suggest-item" style="padding: 10px; cursor:pointer; border-bottom: 1px solid #eee;">${item}</div>`;
                        });
                        $('#suggestions').html(html).show();

                        $('.suggest-item').on('click', function () {
                            $('#searchInput').val($(this).text());
                            $('#suggestions').hide();
                        });
                    } else {
                        $('#suggestions').hide().empty();
                    }
                }
            });
        });

        // Ẩn gợi ý khi click bên ngoài
        $(document).on('click', function (e) {
            if (!$(e.target).closest('.search-bar').length) {
                $('#suggestions').hide();
            }
        });
    });
    </script>

</body>
</html>
