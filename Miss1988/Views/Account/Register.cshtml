@model Miss1988.Models.ViewModel.RegisterVM
    <!-- dùng cùng class như Login -->
    <h2>Register</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Email -->
        <div class="input">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "input1", placeholder = "Email address" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <!-- Mật khẩu -->
        <div class="input password-wrapper">
            @Html.LabelFor(m => m.MatKhau)
            @Html.PasswordFor(m => m.MatKhau, new { @class = "input1", id = "passwordInput", placeholder = "Password" })
            <i class="fa fa-eye" id="togglePassword"></i>
            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
        </div>

        <!-- Tên đăng nhập -->
        <div class="input">
            @Html.LabelFor(m => m.HoTen)
            @Html.TextBoxFor(m => m.HoTen, new { @class = "input1", placeholder = "Tên đăng nhập" })
            @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger" })
        </div>

        <!-- Ngày tạo (readonly) -->
        <div class="input">
            <label>Ngày tạo</label>
            <input type="text" class="input1" value="@DateTime.Now.ToString("dd/MM/yyyy HH:mm")" readonly />
        </div>

        <button type="submit" class="btn">Đăng ký</button>

        <p class="info-text">
            Dữ liệu cá nhân của bạn sẽ được sử dụng để hỗ trợ trải nghiệm, quản lý tài khoản,
            và tuân theo <a href="#">chính sách bảo mật</a> của chúng tôi.
        </p>
    }

<script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("passwordInput");

    togglePassword?.addEventListener("click", function () {
        const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
        passwordInput.setAttribute("type", type);
        this.classList.toggle("fa-eye-slash");
    });
</script>
