@model IEnumerable<Miss1988.Models.ViewModel.CategoryVM>
<!-- SwiperJS CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<!-- SwiperJS JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<style>
    .categories {
        max-width: 1200px;
        margin: 40px auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 24px;
    }

    .swiper {
        width: 100%;
        padding: 30px 0;
    }

    .swiper-slide {
        width: auto;
    }

    .category-card {
        width: 200px;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        padding: 20px 16px;
        text-align: center;
        transition: all 0.3s ease;
        text-decoration: none;
        display: block;
    }

        .category-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 22px rgba(0, 0, 0, 0.12);
        }

        .category-card img {
            width: 100%;
            height: 140px;
            object-fit: cover;
            border-radius: 12px;
            margin-bottom: 14px;
            transition: filter 0.3s;
        }

        .category-card:hover img {
            filter: brightness(1.08);
        }

        .category-card h4 {
            font-size: 16px;
            font-weight: bold;
            color: #222;
            margin: 0;
            text-decoration: underline;
        }

    .desc-hidden {
        display: none;
    }
</style>



<!-- Swiper wrapper -->
<div class="categories">
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="swiper-slide">
                        <a class="category-card" href="@Url.Action("Index", "Menu", new { tenNhom = item.TenNhom })">
                            <img src="@Url.Content(item.ImageUrl ?? "~/Content/Images/no-image.png")" alt="@item.TenNhom" />
                            <h4>@item.TenNhom</h4>
                            <p class="desc-hidden">@item.MoTa</p>
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="swiper-slide">Không có danh mục nào.</div>
            }
        </div>
    </div>
    </div>
    <script>
        const swiper = new Swiper(".mySwiper", {
            slidesPerView: "auto",
            spaceBetween: 20,
            freeMode: true,
            grabCursor: true
        });
    </script> 