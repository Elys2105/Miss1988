@model IEnumerable<Miss1988.Models.ViewModel.ProductVM>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .products {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px 16px; /* 👈 thêm padding trái/phải để thẳng hàng với categories */
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 24px;
    }

    .product-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 6px 14px rgba(0, 0, 0, 0.06);
        padding: 16px 14px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.08);
        }

        .product-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 12px;
            margin-bottom: 12px;
        }

        .product-card h4 {
            font-size: 15px;
            font-weight: 700;
            margin: 0 0 6px;
            color: #442d23;
        }

        .product-card p {
            font-size: 13px;
            color: #7c5a45;
            margin: 0 0 10px;
            line-height: 1.4;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .product-card .price {
            font-weight: bold;
            color: #3e2b1f;
            font-size: 14px;
        }

    .arrow-button {
        position: absolute;
        bottom: 12px;
        right: 12px;
        background-color: #fff;
        border-radius: 50%;
        padding: 6px 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: background 0.2s ease;
    }

        .arrow-button:hover {
            background-color: #ffe0d2;
        }

        .arrow-button i {
            font-size: 14px;
            color: #e0764b;
        }
</style>

<div class="products">
    @foreach (var item in Model)
    {
        var imageUrl = string.IsNullOrWhiteSpace(item.ImageUrl)
            ? Url.Content("~/Content/Images/no-image.png")
            : item.ImageUrl.StartsWith("http", StringComparison.OrdinalIgnoreCase)
                ? item.ImageUrl
                : Url.Content(item.ImageUrl);

        <div class="product-card">
            <img src="@imageUrl" alt="@item.TenMon" />
            <h4>@item.TenMon</h4>
            <p>@item.MoTa</p>
            <div class="price">@string.Format("{0:N0} ₫", item.GiaBan)</div>
            <a href="@Url.Action("Details", "Home", new { id = item.MonID })" class="arrow-button">
                <i class="fa fa-arrow-right"></i>
            </a>

        </div>
    }
</div>
