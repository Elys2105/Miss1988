@model Miss1988.Models.Mon

<h2>Thông tin món</h2>

<div class="container-fluid">
    <dl class="dl-horizontal" style="border-bottom:1px solid #ccc; padding-bottom:10px; margin-bottom:10px;">
        <dt>Tên món</dt>
        <dd>@Html.DisplayFor(m => m.TenMon)</dd>

        <dt>Mô tả</dt>
        <dd>@Html.DisplayFor(m => m.MoTa)</dd>

        <dt>Giá bán</dt>
        <dd>@(Model.GiaBan.HasValue ? Model.GiaBan.Value.ToString("N0") + " đ" : "0 đ")</dd>

        <dt>Hình ảnh</dt>
        <dd>
            <img src="@Url.Content(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "~/Content/Images/no-image.png")"
                 alt="@Model.TenMon"
                 class="img-thumbnail"
                 style="max-width: 200px;" />
        </dd>

        <dt>Nhóm món</dt>
        <dd>@(Model.NhomMon != null ? Model.NhomMon.TenNhom : "Chưa phân loại")</dd>
    </dl>

    <div class="form-group">
        @Html.ActionLink("✏️ Sửa món", "Edit", new { id = Model.MonID }, new { @class = "btn btn-warning" })
        @Html.ActionLink("🔙 Trở lại danh sách", "Index", null, new { @class = "btn btn-default" })
    </div>
</div>
