@model IEnumerable<Miss1988.Models.NhomMon>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên nhóm</th>
            <th>Mô tả</th>
            <th>Hình ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenNhom</td>
                <td>@item.MoTa</td>
                <td>
                    <img src="@Url.Content(item.ImageUrl ?? "~/Content/Images/no-image.png")"
                         alt="@item.TenNhom"
                         width="100"
                         style="border-radius: 8px;"
                         onerror="this.onerror=null;this.src='@Url.Content("~/Content/Images/no-image.png")';" />
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.NhomMonID }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.NhomMonID }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.NhomMonID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
